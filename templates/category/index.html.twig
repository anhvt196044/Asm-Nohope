{% extends "base.html.twig" %}

{% block title %}catergory list{% endblock %}

{% block body %}
<div class="container col-md-6 text-center mt-3">
    <h1 class="text text-primary"> Category List </h1>
    {% for message in app.session.flashBag.get("Error") %}
        <p class="alert alert-danger">{{ message }} </p>
{% endfor %} 
{% for message in app.session.flashBag.get("Success") %}
        <p class="alert alert-warning">{{ message }} </p>
{% endfor %} 
    <a class="btn btn-outline-primary" href=" {{ path('category_add') }} ">Add Category</a>
    <table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Date of Manufacture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td scope="row">{{ category.id }}</td>
                <td>
                    <a href="{{ path('category_detail', {'id' : category.id })}}">{{ category.name }}</a>
                </td>
                <td>{{ category.dateOfManufacture | date('d/m/Y') }}</td>
                
                <td>
                <a class="btn btn-warning" href="{{ path('category_edit', {'id' : category.id })}}">
                    EDIT
                </a>
                <a class="btn btn-danger" href="{{ path('category_delete', {'id' : category.id })}}"
                onclick="return confirm('Are you sure to delete this category ?')";
                >
                    DELETE
                </a>
            </td>
            </tr>

        {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}